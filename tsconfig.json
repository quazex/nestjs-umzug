{
    "compilerOptions": {
        "outDir": "lib",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,

        "target": "ES2021",
        "lib": [
            "ES2021",
        ],

        "allowJs": true,
        "sourceMap": true,
        "declaration": true,
        "removeComments": false,
        "pretty": true,
        "strict": true,

        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "strictPropertyInitialization": false,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "baseUrl": "./source",
        "paths": {
            "@discovery/*": ["discovery/*"],
            "@errors/*": ["errors/*"],
            "@migrations/*": ["migrations/*"],
            "@postgres/*": ["postgres/*"],
            "@typing/*": ["typing/*"]
        }
    },
    "include": [
        "@types",
        "examples",
        "source",
        "tests"
    ],
    "exclude": [
        "lib",
        "node_modules"
    ]
}
